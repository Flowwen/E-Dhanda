<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/et-Email-regt"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:hint="Email/Phone number"
            android:inputType="text" />

        <EditText
            android:id="@+id/Password-regt"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_secure"
            android:drawablePadding="10dp"
            android:hint="4-digit Pin"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/Retype-pwd-regt"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_secure"
            android:drawablePadding="10dp"
            android:hint="Retype 4-digit Pin"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/Register-btn"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="27dp"
            android:background="@drawable/edit"
            android:text="Register"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:text="Sign up with"
            android:textColor="#000000"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/google-regt"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/fb-regt"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="-37dp"
            android:src="@drawable/facebook"
            android:layout_marginStart="220dp" />
    </LinearLayout>
</LinearLayout>